# ASR 后端配置
# 可选值: pytorch (默认), onnx, sensevoice
ASR_BACKEND=pytorch

# 设备配置
DEVICE=cuda
NGPU=1
NCPU=4

# ONNX 后端配置 (当 ASR_BACKEND=onnx 时生效)
ONNX_QUANTIZE=true

# SenseVoice 后端配置 (当 ASR_BACKEND=sensevoice 时生效)
SENSEVOICE_MODEL=iic/SenseVoiceSmall
SENSEVOICE_LANGUAGE=zh

# 服务配置
HOST=0.0.0.0
PORT=8000
DEBUG=false

# 热词配置
HOTWORDS_THRESHOLD=0.85

# LLM 配置 (可选)
LLM_ENABLE=false
LLM_MODEL=qwen2.5:7b
LLM_BASE_URL=http://localhost:11434
